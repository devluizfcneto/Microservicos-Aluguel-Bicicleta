{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "./**/*.ts",
        "aluguel-service/webpack.config.cjs"
    ],
    "exclude": [
        "node_modules"
    ]
}